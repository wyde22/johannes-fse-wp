{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "styles": {
    "color": {
      "text": "var:preset|color|johannes-grays-100",
      "background": "var:preset|color|johannes-grays-0"
    },
    "spacing": {
      "blockGap": "var:preset|spacing|small",
      "padding": {
        "top": "0",
        "right": "var:preset|spacing|small",
        "bottom": "0",
        "left": "var:preset|spacing|small"
      }
    },
    "typography": {
      "fontFamily": "var:preset|font-family|primary",
      "fontSize": "var:preset|font-size|p-huge",
      "fontWeight": "var:custom|font-weight|regular",
      "lineHeight": "var:custom|line-height|regular"
    },
    "elements": {
      "button": {
        "typography": {
          "fontSize": "var:preset|font-size|xs",
          "fontWeight": "var:custom|font-weight|regular"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var:preset|font-family|primary",
          "fontWeight": "var:custom|font-weight|extrabold"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var:preset|font-size|xl"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var:preset|font-size|l"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var:preset|font-size|m"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var:preset|font-size|p-huge"
        }
      }
    },
    "blocks": {
      "core/read-more": {
        "color": {
          "background": "var:preset|color|johannes-grays-100",
          "text": "var:preset|color|johannes-grays-0"
        },
        "spacing": {
          "padding": {
            "top": "calc(0.667em + 2px)",
            "right": "calc(1.333em + 2px)",
            "bottom": "calc(0.667em + 2px)",
            "left": "calc(1.333em + 2px)"
          }
        },
        "typography": {
          "fontSize": "var:preset|font-size|xs",
          "fontWeight": "var:custom|font-weight|regular"
        }
      }
    }
  }
}